{
  "compilerOptions": {
    // Carpetas
    "rootDir": "src",
    "outDir": "dist",
    

    // Ambiente JS moderno
    "target": "ES2020",
    
    "module": "CommonJS",
    "lib": ["ES2020"],

    // Node types
    "types": ["node"],
    

    // Mapas de c√≥digo y declaraciones
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Reglas estrictas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Compatibilidad con import/export
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  
}
